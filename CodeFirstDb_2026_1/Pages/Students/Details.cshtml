@page
@model CodeFirstDb_2026_1.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Major)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Major)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.StudentId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<div>
    <hr />
    <h4>Enrollments</h4>
    <table class="table">
        <thead>
            <tr>
                <th>CourseId</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.Student.Courses)
            {
                <tr>
                    <td>@c.CourseId</td>
                    <td>@c.Name</td>
                    <td>@c.Description</td>
                    <td>
                        <a asp-page="./Details" asp-page-handler="Delete" 
                            asp-route-StudentId="@Model.Student.StudentId" 
                            asp-route-id="@c.CourseId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
</div>
<div>
    <hr />
    <h4>Add Courses to student:</h4>
    <form method="post">
        <p><input name="StudentId" value="@Model.Student.StudentId" type="hidden"/>
        <select asp-items="@Model.Courses" asp-for="@Model.SelectedCourse" class="form-control"></select></p>
        <p><button type="submit">Add</button></p>
    </form>
</div>

