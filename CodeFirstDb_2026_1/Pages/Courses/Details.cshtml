@page
@model CodeFirstDb_2026_1.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course!.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course!.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course!.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course!.CourseId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<div>
    <h4>Student List:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    StudentId
                </th>
                <th>
                    Name
                </th>
                <th>
                    Major
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.StudentList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => student.StudentId)
                    </td>
                    <td>
                        @(student.FirstName + " " + student.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => student.Major)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-page-handler="Delete"
                            asp-route-CourseId="@Model.Course.CourseId"
                            asp-route-id="@student.StudentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
